---
import type { GetStaticPaths } from "astro";
import type { PokemonListResponse } from "@/types/pokemon";
import Layout from "@/layouts/Layout.astro";
import PokemonCard from "@/components/PokemonCard.astro";

export const getStaticPaths = (async ({ paginate }) => {
  const response = await fetch("https://pokeapi.co/api/v2/pokemon?limit=151");
  const { results }: PokemonListResponse = await response.json();

  return paginate(results, {
    pageSize: 18,
  });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
const title = "Pokemons 1ra Generation";
---

<Layout title={title}>
  <h1>Vista Paginada</h1>
  <section class="grid gap-4 grid-cols-6 mb-4">
    {page.data.map(({ name, url }) => <PokemonCard name={name} url={url} />)}
  </section>
  <section class="flex justify-between">
    <div>
      <a href={page.url.prev} class:list={["btn", {
        "disabled": !page.url.prev
      }]} href="">Anterior</a>
      <a href={page.url.next} class:list={["btn", {
        "disabled": !page.url.next
      }]} href="">Siguiente</a>
    </div>
    <p>PÃ¡gina {page.currentPage} de {page.lastPage}</p>
  </section>
</Layout>

<style>
  .btn {
    @apply bg-blue-500 px-4 py-2 text-white rounded;
  }

  .disabled {
    @apply bg-gray-600 text-gray-400;
  }
</style>
